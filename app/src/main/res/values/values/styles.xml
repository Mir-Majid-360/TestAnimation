<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/icon_color</item> // action bar color
        <item name="colorPrimaryDark">@color/app_theme_color</item>// status bar color
        <item name="colorAccent">@color/app_black</item> // cursor color

    </style>


